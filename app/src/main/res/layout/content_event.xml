<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event"
    android:background="@mipmap/main_page_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.purdue.rteoyiiw.urglobalappapi19.EventActivity"
    tools:showIn="@layout/app_bar_event">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_event_layout">

            <ImageView
                android:layout_height="150dp"
                app:srcCompat="@drawable/event_1"
                android:id="@+id/event_1"
                android:clickable="true"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"/>

            <ImageView
                android:layout_height="150dp"
                app:srcCompat="@drawable/event_2"
                android:id="@+id/event_2"
                android:clickable="true"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_below="@+id/event_1"/>

     </RelativeLayout>
    </ScrollView>

</RelativeLayout>