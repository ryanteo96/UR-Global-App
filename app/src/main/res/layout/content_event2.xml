<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_event2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.purdue.rteoyiiw.urglobalappapi19.EventDetail2Activity"
    tools:showIn="@layout/app_bar_event2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EventTitle2"
                android:textSize="17sp"
                android:textStyle="normal|bold"
                android:id="@+id/event2title" />

            <TextView
                android:text="@string/description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/description2" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>